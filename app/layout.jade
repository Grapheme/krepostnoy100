- var title = "Крепостной"
- var headerClass = "";
- var bodyClass = "";

block vars

doctype html
html.no-js
    head
        meta(charset="utf-8")
        title #{title}
        meta(name="description" content="")
        meta(name="viewport" content="width=device-width")
        link(rel="shortcut icon" href="/favicon.ico")
        // build:css(.) styles/vendor.css
        // bower:css
        link(rel='stylesheet', href='bower_components/fotorama/fotorama.css')
        // endbower
        // endbuild
        // build:css(.tmp) styles/main.css
        link(rel="stylesheet" href="styles/main.css")
        // endbuild
        // build:js scripts/vendor/modernizr.js
        script(src="bower_components/modernizr/modernizr.js")
        // endbuild

    body(class="#{bodyClass}")
      header(class="header#{headerClass}")
        .wrapper  
          a(href="index.html").logo
          nav.main-nav
            ul.nav-ul
              li.nav-li
                a(href="about.html" class="#{bodyClass=='about' ? 'active' : ''}") О доме
              li.nav-li
                a(href="location.html" class="#{bodyClass=='location' ? 'active' : ''}") Расположение
              li.nav-li
                a(href="layouts.html" class="#{bodyClass=='layouts' ? 'active' : ''}") Планировки
              li.nav-li
                a(href="#") Ипотека
              li.nav-li
                a(href="#") Застройщик
              li.nav-li
                a(href="news.html" class="#{bodyClass=='news' ? 'active' : ''}") Новости
              li.nav-li
                a(href="#") Контакты

      block content

      footer.footer
        .wrapper
          span © Группа компаний «Стройковъ», 2014
          a(href="#").brd-link Правовые документы
          span.fl-r Разработано агентством <a href="#" class="brd-link">ГРАФЕМА</a>.

      // build:js(.) scripts/vendor.js
      // bower:js
      script(src='bower_components/jquery/dist/jquery.js')
      script(src='bower_components/fotorama/fotorama.js')
      // endbower
      // endbuild

      // build:js({app,.tmp}) scripts/main.js
      script(src="scripts/main.js")
      // endbuild